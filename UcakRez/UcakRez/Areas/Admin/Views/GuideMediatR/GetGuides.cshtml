@using UcakRez.CQRS.Results.GuideResults
@model GetGuideByIDQueryResult
@{
    ViewData["Title"] = "GetGuides";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Doktor Bilgi Düzenleme Sayfası</h2>

<form method="post">
    <input type="hidden" asp-for="GuideID" />
    <label>Doktor Adı</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <label>Doktor Açıklaması</label>
    <input type="text" class="form-control" asp-for="Description" />
    <br />
    <button class="btn btn-outline-primary">Bilgileri Güncelle</button>
</form>